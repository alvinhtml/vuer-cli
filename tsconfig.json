{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"],
    "types": [
      "node", 
      "vite/client", 
      "vite-plugin-pwa/client",
      "vite-plugin-pages/client",
      "@intlify/vite-plugin-vue-i18n/client"
    ],
    "paths": {
      "/~/*": ["./src/assets/*"],
      "/@src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue", 
    "documentation/**/*.md"
  ]
}
